<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnInsertRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity to insert record" />

    <Button
        android:id="@+id/btnGetRecord"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity to retrieve records (TextView)" />

    <Button
        android:id="@+id/btnGetRecord2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Activity to retrieve records (ListView)" />


</LinearLayout>